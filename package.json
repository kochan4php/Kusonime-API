{
    "name": "kusonime-api",
    "version": "1.0.0-lts",
    "description": "Unofficial Kusonime REST API",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "build": "tsc -p .",
        "test": "jest --silent --detectOpenHandles --forceExit --runInBand",
        "test:pass": "jest --silent --detectOpenHandles --forceExit --runInBand --passWithNoTests",
        "lint:check": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "prettier:check": "prettier --check src/**/*.ts",
        "prettier:write": "prettier --write src/**/*.ts",
        "docker:up": "pnpm docker:down && docker compose up -d",
        "docker:down": "docker compose down",
        "prepare": "husky install"
    },
    "keywords": [
        "express",
        "typescript",
        "express.ts",
        "expressjs",
        "express.js"
    ],
    "author": "Deo Subarno",
    "license": "MIT",
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.5.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.14.9",
        "@types/npmlog": "^7.0.0",
        "@types/supertest": "^6.0.2",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "eslint": "^9.5.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.7",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.2"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "cheerio": "1.0.0-rc.12",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express": "^4.19.2",
        "express-rate-limit": "^7.3.1",
        "helmet": "^7.1.0",
        "husky": "^9.0.11",
        "morgan": "^1.10.0",
        "npmlog": "^7.0.1",
        "serverless-http": "^3.2.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "pnpm test:pass",
            "pnpm lint:fix",
            "pnpm prettier:write"
        ]
    }
}
